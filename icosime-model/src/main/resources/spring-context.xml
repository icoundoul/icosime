<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
        default-autowire="byName">
        <!-- <context:onnotation-config/> -->
        <context:component-scan 
        	base-package="com.icoundoul.icosime.dao, com.icoundoul.icosime.service"/>

		<!--  DÃ©claration du PropertyPlaceholderConfigurer -->
   	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<!-- <value>classpath:/com/objis/spring/dao/db.properties</value> -->
				<value>spring-db.properties</value>
				<value>swagger.properties</value>
			</list>
		</property>
	</bean>
	
	<!-- CONFIGURATION swagger -->
	<bean class="com.mangofactory.swagger.configuration.DocumentationConfig" />

</beans>
